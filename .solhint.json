{
  "extends": "default",
  "rules": {
    "reenrancy": "error",
    "avoid-sha3": "error",
    "avoid-suicide": "error",
    "avoid-throw": "error",
    "func-visibility": "error",
    "state-visibility": "error",
    "check-send-result": "error",
    "avoid-call-value": "warn",
    "compiler-fixed": "warn",
    "compiler-gt-0_4": "error",
    "no-complex-fallback": "warn",
    "mark-callable-contracts": "warn",
    "multiple-sends": "warn",
    "no-simple-event-func-name": "error",
    "avoid-tx-origin": "error",
    "no-inline-assembly": "warn",
    "not-rely-on-block-hash": "error",
    "avoid-low-level-calls": "warn",
    "not-rely-on-time": false,
    "func-name-mixedcase": "error",
    "func-param-name-mixedcase": "error",
    "var-name-mixedcase": "error",
    "event-name-camelcase": "error",
    "const-name-snakecase": "error",
    "modifier-name-mixedcase": "error",
    "contract-name-camelcase": "error",
    "use-forbidden-name": "error",
    "visibility-modifier-order": "warn",
    "imports-on-top": "error",
    "func-order": "warn",
    "quotes": ["warn", "double"],
    "no-mix-tabs-and-spaces": "error",
    "indent": ["error", 2],
    "bracket-align": "error",
    "array-declaration-spaces": false,
    "separate-by-one-line-in-contract": "warn",
    "expression-indent": "warn",
    "statement-indent": "warn",
    "space-after-comma": "warn",
    "no-spaces-before-semicolon": "error",
    "two-lines-top-level-separator": "error",
    "payable-fallback": false,
    "no-empty-blocks": "warn",
    "no-unused-vars": "error",
    "max-line-length": ["warn", 120],
    "function-max-lines": ["warn", 45],
    "code-complexity": ["warn", 7],
    "max-states-count": ["warn", 15]
  }
}
